<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow>
    <TextView
        android:id="@+id/TextTable"
        android:layout_weight="1"
        android:background="#b0b0b0"
        android:gravity="center"
        android:padding="20dp"
        android:text="Row 3 column 1"
        android:textColor="#000000">
    </TextView>

    <TextView
        android:id="@+id/TextTable2"
        android:layout_weight="1"
        android:background="#a09f9f"
        android:gravity="center"
        android:padding="20dp"
        android:text="Row 3 column 2"
        android:textColor="#000000">
    </TextView>
    </TableRow>



    <TableRow>
        <TextView
        android:id="@+id/TextTable3"
        android:layout_weight="1"
        android:background="#0400FE"
        android:gravity="center"
        android:padding="20dp"
        android:text="Row 4 Column 3"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF">
        </TextView>
    </TableRow>


    <TableRow android:background="@color/black">
        <TextView
            android:id="@+id/TextTable4"
            android:layout_weight="0"
            android:background="#FEFB00"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginRight="7px"
            android:text="Row 5 Column 3"
            android:textStyle="bold"
            android:textColor="#000000">
        </TextView>
        <TextView
            android:id="@+id/TextTable5"
            android:layout_weight="0"
            android:background="#FEFB00"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginRight="7px"
            android:text="Row 5 Column 3"
            android:textStyle="bold"
            android:textColor="#000000">
        </TextView>
        <TextView
            android:id="@+id/TextTable6"
            android:layout_weight="0"
            android:background="#FEFB00"
            android:gravity="center"
            android:padding="20dp"
            android:text="Row 5 Column 3"
            android:textStyle="bold"
            android:textColor="#000000">
        </TextView>
    </TableRow>


</TableLayout>